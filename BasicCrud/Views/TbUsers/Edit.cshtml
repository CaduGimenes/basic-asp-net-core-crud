@model BasicCrud.Models.TbUser

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="NmName" class="control-label">Name</label>
                <input asp-for="NmName" class="form-control" />
                <span asp-validation-for="NmName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DsEmail" class="control-label">Email</label>
                <input asp-for="DsEmail" class="form-control" />
                <span asp-validation-for="DsEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-primary" asp-action="Index">Back to list</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
